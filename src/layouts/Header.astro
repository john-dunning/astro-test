---
const [section] = Astro.url.pathname.slice(1).split("/");
---

<div class="site-name">
	<a href="/" aria-current={section ? undefined : "page"}>
		john<strong>dunning</strong>.com/
	</a>
</div>

<header>
	{section &&
		<div class="section-name">{section}</div>
	}
</header>

<style lang="scss">
	header, .site-name {
		color: #666;
		font-size: 1.75rem;
		font-weight: bold;
		margin: 1.25rem 0 2rem 0;
		position: relative;
		grid-area: header;
	}

	.site-name {
		grid-area: site-name;

		strong {
			color: black;
		}

		a[aria-current] {
			pointer-events: none;
		}

		a:visited {
			color: inherit;
		}
	}

	.section-name {
		color: var(--highlight);
		top: 0;
		position: absolute;
	}
</style>
