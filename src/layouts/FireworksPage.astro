---
import FireworksLayout from "@/layouts/FireworksLayout.astro";
import CommandsNavList from "@/components/CommandsNavList.astro";
import DisqusComments from "@/components/DisqusComments.astro";

interface Props {
	title: string;
	disqusID?: string;
}

const { title, disqusID } = Astro.props;
---

<FireworksLayout title={title}>
	<slot />

	<CommandsNavList slot="sidebar" />

	{disqusID &&
		<DisqusComments
			title={title}
			id={disqusID}
		/>
	}
</FireworksLayout>
